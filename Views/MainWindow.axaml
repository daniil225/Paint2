<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Paint2.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Paint2.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Paint2">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    
    <Grid RowDefinitions="100,*" ColumnDefinitions="*">
        <Rectangle Grid.Row="0" Fill="Red"/>
        <Grid Grid.Row="1" RowDefinitions="*">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{Binding GroupsColumnWidth}"></ColumnDefinition>
                <ColumnDefinition Width="4"></ColumnDefinition>
                <ColumnDefinition Width="3*"></ColumnDefinition>
                <ColumnDefinition Width="4"></ColumnDefinition>
                <ColumnDefinition Width="{Binding PropertiesColumnWidth}"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Background="Blue">
                <Button Margin="0 0 -54 0"
                        Width="48" Height="48"
                        HorizontalAlignment="Right"
                        Command="{Binding HideGroupsPanelCommand}">
                    <PathIcon Data="{StaticResource ListTreeRegular}"></PathIcon>
                </Button>
                <StackPanel IsVisible="{Binding IsGroupsPanelVisible}">
                    <Viewbox Stretch="UniformToFill"
                             StretchDirection="Both">
                        <Rectangle Width="400"
                                   Height="300"
                                   Fill="Pink"/>
                    </Viewbox>
                </StackPanel>
            </StackPanel>
            <GridSplitter Grid.Column="1" 
                          IsVisible="{Binding IsGroupsPanelVisible}"
                          Background="Black"></GridSplitter>
            <Grid Grid.Column="2"></Grid>
            <GridSplitter Grid.Column="3"
                          IsVisible="{Binding IsPropertiesPanelVisible}" 
                          Background="Black"></GridSplitter>
            <StackPanel Background="Aqua" Grid.Column="4">
                <Button Margin="-54 0 0 0"
                        Width="48" Height="48"
                        Command="{Binding HidePropertiesPanelCommand}">
                    <PathIcon Data="{StaticResource AppsListRegular}"></PathIcon>
                </Button>
                <StackPanel IsVisible="{Binding IsPropertiesPanelVisible}">
                    <Viewbox Stretch="UniformToFill"
                             StretchDirection="Both">
                        <Rectangle Width="200"
                                   Height="300"
                                   Fill="Brown"/>
                    </Viewbox>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>

</Window>
