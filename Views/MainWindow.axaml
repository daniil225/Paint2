<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Paint2.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Paint2.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Paint2">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    
    <Grid RowDefinitions="Auto,*" ColumnDefinitions="*">
        <StackPanel Grid.Row="0">
            <DockPanel>
                <Menu DockPanel.Dock="Top">
                    <MenuItem Header="_File">
                        <MenuItem Header="_Create">
                            <MenuItem.Icon>
                                <PathIcon Data="{StaticResource NoteAddRegular}"></PathIcon>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="_Open">
                            <MenuItem.Icon>
                                <PathIcon Data="{StaticResource FolderOpenRegular}"></PathIcon>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="_Save">
                            <MenuItem.Icon>
                                <PathIcon Data="{StaticResource SaveRegular}"></PathIcon>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="_Save as">
                            <MenuItem.Icon>
                                <PathIcon Data="{StaticResource SaveAsRegular}"></PathIcon>
                            </MenuItem.Icon>
                        </MenuItem>
                        <Separator/>
                        <MenuItem Header="_Exit">
                            <MenuItem.Icon>
                                <PathIcon Data="{StaticResource SignOutRegular}"></PathIcon>
                            </MenuItem.Icon>
                        </MenuItem>
                    </MenuItem>
                    <MenuItem Header="_Info">
                        <MenuItem Header="_Developers">
                            <MenuItem.Icon>
                                <PathIcon Data="{StaticResource PeopleTeamRegular}"></PathIcon>
                            </MenuItem.Icon>
                        </MenuItem>
                    </MenuItem>
                </Menu>
            </DockPanel>
            <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                <Border Background="Gainsboro"
                        BorderBrush="Black"
                        BorderThickness="2"
                        CornerRadius="3"
                        Padding="10" Margin="10">
                    <StackPanel>
                        <TextBlock HorizontalAlignment="Center">Figures</TextBlock>
                        <Separator></Separator>
                        <Button ToolTip.Tip="Available figures"
                                Padding="5"
                                Background="Transparent">
                            <Button.Content>
                                <Svg Path="{Binding SelectedFigureMenuItem.IconPath}"
                                     Width="48" Height="48"></Svg>
                            </Button.Content>
                            <Button.Flyout>
                                <Flyout Placement="Bottom" ShowMode="TransientWithDismissOnPointerMoveAway">
                                    <ListBox Width="300"
                                             ItemsSource="{Binding FiguresInMenu}"
                                             SelectedItem="{Binding SelectedFigureMenuItem}">
                                        <ListBox.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel/>
                                            </ItemsPanelTemplate>
                                        </ListBox.ItemsPanel>
                                        <ListBox.ItemTemplate>
                                            <DataTemplate DataType="{x:Type vm:FigureMenuItem}">
                                                <Svg ToolTip.Tip="{Binding IconName}"
                                                     Path="{Binding IconPath}"
                                                     Width="48" Height="48"></Svg>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </Flyout>
                            </Button.Flyout>
                        </Button>
                    </StackPanel>
                </Border>
                <Border Background="Gainsboro"
                        BorderBrush="Black"
                        BorderThickness="2"
                        CornerRadius="3"
                        Padding="10" Margin="10">
                    <StackPanel>
                        <TextBlock HorizontalAlignment="Center">Tools</TextBlock>
                        <Separator></Separator>
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <Button ToolTip.Tip="Intersect figures"
                                    Background="Transparent"
                                    Padding="5">
                                <Svg Width="48" Height="48" Path="/Assets/Tools/Intersect.svg"></Svg>
                            </Button>
                            <Button ToolTip.Tip="Union figures"
                                    Background="Transparent"
                                    Padding="5">
                                <Svg Width="48" Height="48" Path="/Assets/Tools/Union.svg"></Svg>
                            </Button>
                            <Button ToolTip.Tip="Subtract figures"
                                    Background="Transparent"
                                    Padding="5">
                                <Svg Width="48" Height="48" Path="/Assets/Tools/Subtract.svg"></Svg>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Border>
                <Border Background="Gainsboro"
                        BorderBrush="Black"
                        BorderThickness="2"
                        CornerRadius="3"
                        Padding="10" Margin="10">
                    <StackPanel>
                        <TextBlock HorizontalAlignment="Center">Options</TextBlock>
                        <Separator></Separator>
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <Button ToolTip.Tip="Move figure"
                                    Background="Transparent"
                                    Padding="5">
                                <PathIcon Width="48" Height="48"
                                          Data="{StaticResource ArrowMoveRegular}"></PathIcon>
                            </Button>
                            <Button ToolTip.Tip="Rotate figure"
                                    Background="Transparent"
                                    Padding="5">
                                <PathIcon Width="48" Height="48"
                                          Data="{StaticResource ArrowRotateCounterclockwiseRegular}"></PathIcon>
                            </Button>
                            <Button ToolTip.Tip="Scale figure"
                                    Background="Transparent"
                                    Padding="5">
                                <PathIcon Width="48" Height="48"
                                          Data="{StaticResource ScaleRegular}"></PathIcon>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Border>
                <Border Background="Gainsboro"
                        BorderBrush="Black"
                        BorderThickness="2"
                        CornerRadius="3"
                        Padding="10" Margin="10">
                    <StackPanel>
                        <TextBlock HorizontalAlignment="Center">Zoom</TextBlock>
                        <Separator></Separator>
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <Button ToolTip.Tip="Zoom in"
                                    Background="Transparent"
                                    Padding="5">
                                <PathIcon Width="48" Height="48"
                                          Data="{StaticResource ZoomInRegular}"></PathIcon>
                            </Button>
                            <Button ToolTip.Tip="Zoom out"
                                    Background="Transparent"
                                    Padding="5">
                                <PathIcon Width="48" Height="48"
                                          Data="{StaticResource ZoomOutRegular}"></PathIcon>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </StackPanel>
        <Grid Grid.Row="1" RowDefinitions="*">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{Binding GroupsColumnWidth}"></ColumnDefinition>
                <ColumnDefinition Width="4"></ColumnDefinition>
                <ColumnDefinition Width="3*"></ColumnDefinition>
                <ColumnDefinition Width="4"></ColumnDefinition>
                <ColumnDefinition Width="{Binding PropertiesColumnWidth}"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Background="Blue">
                <Button Margin="0 0 -54 0"
                        Width="48" Height="48"
                        HorizontalAlignment="Right"
                        Command="{Binding HideGroupsPanelCommand}">
                    <PathIcon Data="{StaticResource ListTreeRegular}"></PathIcon>
                </Button>
                <StackPanel IsVisible="{Binding IsGroupsPanelVisible}">
                    <Viewbox Stretch="UniformToFill"
                             StretchDirection="Both">
                        <Rectangle Width="400"
                                   Height="300"
                                   Fill="Pink"/>
                    </Viewbox>
                </StackPanel>
            </StackPanel>
            <GridSplitter Grid.Column="1" 
                          IsVisible="{Binding IsGroupsPanelVisible}"
                          Background="Black"></GridSplitter>
            <Grid Grid.Column="2"></Grid>
            <GridSplitter Grid.Column="3"
                          IsVisible="{Binding IsPropertiesPanelVisible}" 
                          Background="Black"></GridSplitter>
            <StackPanel Background="Aqua" Grid.Column="4">
                <Button Margin="-54 0 0 0"
                        Width="48" Height="48"
                        Command="{Binding HidePropertiesPanelCommand}">
                    <PathIcon Data="{StaticResource AppsListRegular}"></PathIcon>
                </Button>
                <StackPanel IsVisible="{Binding IsPropertiesPanelVisible}">
                    <Viewbox Stretch="UniformToFill"
                             StretchDirection="Both">
                        <Rectangle Width="200"
                                   Height="300"
                                   Fill="Brown"/>
                    </Viewbox>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>

</Window>
