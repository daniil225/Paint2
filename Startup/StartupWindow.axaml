<Window x:Class="Paint2.Startup.StartupWindow"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="StartupWindow"
        Width="500" Height="300"
        WindowStartupLocation="CenterScreen"
        SystemDecorations="None"
        CanResize="False"
        Background="Transparent"
        TransparencyLevelHint="Transparent">
    
    <Border Background="PaleGreen" CornerRadius="30">
        <Grid>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Svg Path="/Assets/tractor.svg" Width="150"></Svg>
                
                <TextBlock Text="Загрузка..." FontSize="32" FontWeight="Bold" Margin="0,10,0,20" HorizontalAlignment="Center"/>
                <ProgressBar Width="300" Height="20" IsIndeterminate="True"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>